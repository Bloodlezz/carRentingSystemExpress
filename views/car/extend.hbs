<div id="details">
    <div class="car-details">
        <h2>{{model}}</h2>
        <img src="{{image}}" alt="car">
        <h2 class="price">Price per day: {{pricePerDay}} &euro;</h2>
    </div>
    {{#if (isRentedByUser rent.user user._id)}}
        <form id="rent-form" action="/car/extend/{{_id}}" method="POST">
            <label for="days">Days to extend:</label>
            <input type="number" name="days" id="days" step="1" value="1" />
            <input class="submit-btn" type="submit" value="Extend Rent" />
        </form>
    {{else}}
        <h3>Car has been rented !</h3>
    {{/if}}
</div>