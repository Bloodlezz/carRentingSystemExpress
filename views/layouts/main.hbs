<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Car Renting System</title>
    <meta name="author" content="Konstantin Lazarov">
    <meta name="description" content="Car Renting System">
    <meta name="keywords" content="Konstantin, Lazarov, car, renting, system">

    <link href="/css/style.css" type="text/css" rel="stylesheet">
    <script src="/jQuery.js"></script>

    <link href="favicon.ico" type="image/x-icon">
</head>

<html>

<body>
    <header>
        <nav>
            <ul>
                <li class="align-left first">
                    <a href="/">Home</a>
                </li>
                <li class="align-left">
                    <a href="/car/all">View Avaliable Cars</a>
                </li>

                {{#if user}}
                <li class="align-left">
                    <a href="/user/rents">My Rented Cars</a>
                </li>
                {{/if}}

                {{#if isAdmin}}
                <li class="align-left">
                    <a href="/car/add">Add Car</a>
                </li>
                    <li class="align-left">
                        <a href="/user/users-rights">Users Rights</a>
                    </li>
                {{/if}}

                {{#if user}}
                <li class="align-right">
                    <form id="logout-form" action="/user/logout" method="POST">
                        <a href="javascript:document.getElementById('logout-form').submit()">Logout</a>
                    </form>
                </li>
                <li class="align-right">
                    <span>Hello, {{user.username}}</span>
                </li>
                {{else}}
                <li class="align-right">
                    <a href="/user/register">Register</a>
                </li>
                <li class="align-right">
                    <a href="/user/login">Login</a>
                </li>
                {{/if}}
            </ul>
        </nav>
    </header>

    <main>
        {{#if messages.success}}
            <div id="successBox" class="n-success">
                {{#each messages.success}}
                    <p>{{this}}</p>
                {{/each}}
            </div>
        {{/if}}

        {{#if messages.errors}}
            <div id="errorBox" class="n-error">
                {{#each messages.errors}}
                    <p>{{this}}</p>
                {{/each}}
            </div>
        {{/if}}

        {{{body}}}
    </main>

    <footer>
        <p>&copy; 2019 Rent A Car Service Ltd. All Rights Reserved</p>
    </footer>

    {{#if script}}
        <script src="{{script}}"></script>
    {{/if}}
</body>

</html>